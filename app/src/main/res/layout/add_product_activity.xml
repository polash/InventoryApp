<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sksanwar.inventoryapp.AddProduct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_add_product"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher"/>

        <Button
            android:id="@+id/add_product_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Add Image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"/>

        <EditText
            android:id="@+id/name_add_product_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Product Name"
            android:maxLines="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Product Price"/>

        <EditText
            android:id="@+id/price_add_product_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Product Price"
            android:inputType="numberDecimal"
            android:maxLines="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Product Quantity"/>

        <EditText
            android:id="@+id/quantity_add_product_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Product Quantity"
            android:inputType="number"
            android:maxLines="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Supplier Email"/>

        <EditText
            android:id="@+id/supplier_add_product_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Supplier Email"
            android:inputType="textWebEmailAddress"
            android:maxLines="1"/>

    </LinearLayout>
</ScrollView>
